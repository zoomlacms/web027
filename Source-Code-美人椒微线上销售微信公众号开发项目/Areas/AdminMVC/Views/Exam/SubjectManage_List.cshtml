@using System.Data
@using ZoomLa.Common
@model ZoomLa.SQLDAL.SQL.PageSetting
@{ 

}
<table id="EGV" class="table table-striped table-bordered table-hover">
    <tr>
        <td></td>
        <td>ID</td>
        <td>学科名称</td>
        <td>学科组别</td>
        <td>同时段最大安排数</td>
        <td>备注</td>
        <td>操作</td>
    </tr>
    @foreach (DataRow dr in Model.dt.Rows)
    {
        <tr>
            <td><input type="checkbox" name="idchk" value="@dr["ID"]" /></td>
            <td>@dr["ID"]</td>
            <td>@dr["Name"]</td>
            <td>@dr["Subject"]</td>
            <td>@dr["MaxCount"]</td>
            <td>@dr["Flag"]</td>
            <td>
                <a href="AddSubject?id=@dr["ID"]" class="option_style" title="修改"><i class="fa fa-pencil"></i>修改</a>
                <a href="javascript:;" onclick='mvcpage.del({url: "Subject_Del", ids: @dr["ID"], confirm: "确认删除该学科吗？"});' class="option_style" title="删除"><i class="fa fa-trash-o" title="删除"></i>删除</a>
            </td>
        </tr>
    }
</table>
@model ZoomLa.Model.Exam.M_EDU_Subject
@{
    Layout = "~/Areas/AdminMVC/Views/Shared/_layout.cshtml";
}
@section head{
    <title>编辑学科</title>
}
@section content{
    <div id="BreadDiv" class="container-fluid mysite">
        <div class="row">
            <ol id="BreadNav" class="breadcrumb navbar-fixed-top">
                <li><a href='@(CustomerPageAction.customPath2)I/Main.aspx'>工作台</a></li>
                <li><a href='Papers_System_Manage'>教育模块</a></li>
                <li><a href="SubjeacManage">学科管理</a></li>
                <li class="active">编辑学科</li>
            </ol>
        </div>
    </div>
    <form method="post" action="@MVCHelper.GetAction("Subject_Add",Request)">
        <table class="table table-striped table-bordered table-hover">
            <tr>
                <td style="width:15%;" class="text-right">学科名称：</td>
                <td>@Html.TextBoxFor(m => m.Name, new { @class = "form-control text_md" })</td>
            </tr>
            <tr>
                <td class="text-right">学科组别：</td>
                <td>
                    @Html.TextBoxFor(m => m.Subject, new { @class = "form-control text_md" })
                </td>
            </tr>
            <tr>
                <td class="text-right">最大安排数：</td>
                <td>
                    @Html.TextBoxFor(m => m.MaxCount, new { @class = "form-control text_md" })
                </td>
            </tr>
            <tr>
                <td class="text-right">备注：</td>
                <td>
                    @Html.TextAreaFor(m => m.Flag, new { @class = "form-control tarea_l", @rows = "3" })
                </td>
            </tr>
            <tr>
                <td colspan="2" class="text-center">
                    <button type="submit" class="btn btn-primary">保存</button>
                    <button class="btn btn-primary" type="button" onclick="location = 'SubjectManage';">取消</button>
                </td>
            </tr>
        </table>
    </form>
}
@section script{
<script>
    $(function () {
        validate.zl_init($("form"), {
            rules: {
                Name: { required: true },
                MaxCount: { digits: true }
            },
            messages: {
                Name: { required: "学科名称不能为空" },
                MaxCount: { digits: "最大安排数只能为整数" }
            },
        }, { placement: 'right', style: 'green' });
    });
</script>
}